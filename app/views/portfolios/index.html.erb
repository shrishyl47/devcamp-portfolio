<h1> Portfolio items </h1>

<%= link_to "create a new item", new_portfolio_url %>

<% @portfolio_items.each do |item| %>
	<p><%= link_to item.title, portfolio_path(item.id) %></p>
	<p><%= item.subtitle %></p>
	<p><%= item.body %></p>
	<p><%= image_tag item.thumb_image unless item.thumb_image.nil? %></p>
	<%= link_to "Edit the portfolio item", edit_portfolio_path(item.id) %>
<% end %>