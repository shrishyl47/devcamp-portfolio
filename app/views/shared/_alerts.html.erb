<% if flash[:alert] %>
<%= js add_gritter(flash[:alert], title: "Shrishyl Portfolio", sticky: true, class_name: "custom_gritter", time: 1000) %>
<% elsif flash[:error] %>
<%= js add_gritter(flash[:error], title: "Shrishyl Portfolio", sticky: true, class_name: "custom_gritter", time: 1000) %>
<% else %>
<%= js add_gritter(flash[:notice], title: "Shrishyl Portfolio", sticky: true, class_name: "custom_gritter", time: 1000) %>
<% end %>